{
  "name": "markdoc-test",
  "scripts": {
    "prebuild": "npm run clean",
    "clean": "rm -rf ./dist",
    "serve": "npx http-server dist -g",
    "build": "npm run build-templates && npm run build-frontend",
    "build-templates": "npx tsnd lib/build.ts",
    "build-frontend": "npx parcel build 'src/main.ts' 'src/styles/**/*.css'",
    "predev": "npm run clean",
    "dev": "npx tsnd --respawn lib/build.ts --watch"
  },
  "dependencies": {
    "@markdoc/markdoc": "^0.1.1",
    "lit": "^2.2.3"
  },
  "devDependencies": {
    "@parcel/compressor-gzip": "^2.5.0",
    "@parcel/config-default": "^2.5.0",
    "@parcel/reporter-bundle-analyzer": "^2.5.0",
    "@types/glob-watcher": "^5.0.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.32",
    "concurrently": "^7.1.0",
    "glob-watcher": "^5.0.5",
    "http-server": "^14.1.0",
    "minimist": "^1.2.6",
    "parcel": "^2.5.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
