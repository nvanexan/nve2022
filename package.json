{
  "name": "markdoc-test",
  "type": "module",
  "scripts": {
    "prebuild": "npm run clean",
    "compile": "node build/lib/build.js && npm run copy-styles",
    "build": "npx tsc && npm run compile",
    "clean": "rm -rf ./build",
    "serve": "npx http-server build",
    "start": "npm run build && npm run serve",
    "copy-styles": "mkdir -p ./build/styles && cp -r ./src/styles ./build/styles",
    "test": "node --experimental-specifier-resolution=node --loader ts-node/esm lib/build.ts",
    "copy": "cp -r ./src ./build"
  },
  "dependencies": {
    "@markdoc/markdoc": "^0.1.1",
    "lit": "^2.2.3"
  },
  "devDependencies": {
    "@types/node": "^17.0.32",
    "http-server": "^14.1.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
