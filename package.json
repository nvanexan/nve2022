    "@parcel/config-default": "^2.5.0",
    "@types/glob-watcher": "^5.0.2",
    "@types/js-yaml": "^4.0.5",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.32",
    "@types/uuid": "^8.3.4",
    "glob-watcher": "^5.0.5",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.6",
    "parcel": "^2.5.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
